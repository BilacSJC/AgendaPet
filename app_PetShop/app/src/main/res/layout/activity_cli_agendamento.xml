<?xml version="1.0" encoding="UTF-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activitys.Cliente.AgendamentoActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="178dp"
            android:layout_margin="16dp"
            android:src="@drawable/banho" />

        <TextView
            android:id="@+id/alt_age_cli_txt_nome_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:hint="Nome Cliente"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/alt_age_cli_txt_telefone_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:hint="Telefone Cliente"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/alt_age_cli_txt_nome_empresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:hint="Nome Empresa"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/alt_age_cli_txt_endereco_empresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:hint="Endereço Empresa"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/alt_age_cli_txt_servico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:hint="Serviço"
            android:textSize="18dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.button.MaterialButton
                android:id="@+id/alt_age_btn_alterar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="@string/agendar"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/mediumBlue"
                style="@style/Widget.MaterialComponents.Button"/>

            <android.support.design.button.MaterialButton
                android:id="@+id/alt_age_btn_limpar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_toStartOf="@id/alt_age_btn_alterar"
                android:layout_toLeftOf="@id/alt_age_btn_alterar"
                android:text="@string/limpar"
                android:textColor="@color/mediumBlue"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        </RelativeLayout>


    </LinearLayout>

</ScrollView>