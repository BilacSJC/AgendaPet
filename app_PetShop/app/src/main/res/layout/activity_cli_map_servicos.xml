<?xml version="1.0" encoding="UTF-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activitys.Cliente.LocalizaPetShopActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="#363636"
            android:text="Qual PetShop vocÃª deseja?"
            android:fontFamily="Segoe ui light"
            android:textSize="22dp" />

        <Spinner
            android:id="@+id/map_spnEmpresas"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_margin="20dp" />

        <Spinner
            android:id="@+id/map_spnServicos"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_margin="20dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="322dp"
            app:civ_border_color="#363636"
            android:src="@drawable/mapa_estatico"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.button.MaterialButton
                android:id="@+id/map_btn_agendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agendar"
                android:layout_margin="20dp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/mediumBlue"
                style="@style/Widget.MaterialComponents.Button"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>