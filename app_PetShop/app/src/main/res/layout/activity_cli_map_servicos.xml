<?xml version="1.0" encoding="UTF-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activitys.Cliente.LocalizaPetShopActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="178dp"
            android:src="@drawable/img_walk_pet"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="#363636"
            android:text="Qual PetShop você deseja?"
            android:fontFamily="Segoe ui light"
            android:textSize="22dp" />

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/alt_age_cli_edt_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data"
                android:inputType="datetime"
                android:focusable="false"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/alt_age_cli_edt_hora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hora"
                android:inputType="time"
                android:focusable="false"
                android:timePickerMode="clock"/>
        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/map_spnEmpresas"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_margin="20dp" />

        <Spinner
            android:id="@+id/map_spnServicos"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_margin="20dp" />

        <Spinner
            android:id="@+id/alt_age_cli_spn_pet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginHorizontal="12dp"
            android:hint="@string/pet"
            android:inputType="text"></Spinner>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.button.MaterialButton
                android:id="@+id/map_btn_agendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avançar"
                android:layout_margin="20dp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/mediumBlue"
                style="@style/Widget.MaterialComponents.Button"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>