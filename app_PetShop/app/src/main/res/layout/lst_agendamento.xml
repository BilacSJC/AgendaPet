<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="1dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lst_age_txt_titulo_agendamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/mediumBlue"
            android:text="Agendamento"
            android:textAlignment="center"
            android:textColor="@color/cinzaClaro"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lst_age_txt_emp_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_toEndOf="@id/txtNome"
                android:layout_toRightOf="@id/txtNome"
                android:text=""
                android:textAlignment="textStart"
                android:layout_marginStart="2dp"/>
            <TextView
                android:id="@+id/txtNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Empresa: "
                android:textColor="#363636"
                android:fontFamily="Times New Roman"
                android:textAlignment="textStart"
                android:layout_marginStart="2dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lst_age_txt_ser_preco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_toEndOf="@id/lblEmpresa"
                android:layout_toRightOf="@id/lblEmpresa"
                android:text=""
                android:textAlignment="textStart"
                android:layout_marginStart="2dp"/>
            <TextView
                android:id="@+id/lblEmpresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ServiÃ§o: "
                android:textColor="#363636"
                android:fontFamily="Times New Roman"
                android:textAlignment="textStart"
                android:layout_marginStart="2dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lst_age_txt_nome_pet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_toEndOf="@id/lblPet"
                android:layout_toRightOf="@id/lblPet"
                android:text=""
                android:textAlignment="textStart"
                android:layout_marginStart="2dp"/>
            <TextView
                android:id="@+id/lblPet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pet: "
                android:textColor="#363636"
                android:fontFamily="Times New Roman"
                android:textAlignment="textStart"
                android:layout_marginStart="2dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lst_age_txt_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_toEndOf="@id/lblData"
                android:layout_toRightOf="@id/lblData"
                android:text=""
                android:textAlignment="textStart"
                android:layout_marginStart="2dp"/>
            <TextView
                android:id="@+id/lblData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Data: "
                android:textColor="#363636"
                android:fontFamily="Times New Roman"
                android:textAlignment="textStart"
                android:layout_marginStart="2dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lst_age_txt_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_toEndOf="@id/lblHora"
                android:layout_toRightOf="@id/lblHora"
                android:text=""
                android:textAlignment="textStart"
                android:layout_marginStart="2dp"/>
            <TextView
                android:id="@+id/lblHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hora: "
                android:textColor="#363636"
                android:fontFamily="Times New Roman"
                android:textAlignment="textStart"
                android:layout_marginStart="2dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lst_age_txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_toEndOf="@id/lblStatus"
                android:layout_toRightOf="@id/lblStatus"
                android:text=""
                android:textAlignment="textStart"
                android:layout_marginStart="2dp"/>
            <TextView
                android:id="@+id/lblStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Status: "
                android:textColor="#363636"
                android:fontFamily="Times New Roman"
                android:textAlignment="textStart"
                android:layout_marginStart="2dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/lst_age_btn_cancelar"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="@string/cancelar"
                card_view:backgroundTint="#C90B0B"
                android:onClick="bntCancelar"/>


            <Button
                android:id="@+id/lst_age_btn_editar"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="@string/editar"
                card_view:backgroundTint="#6a5acd"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>