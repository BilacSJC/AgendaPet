<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="1dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtQualificadorUsuarioLista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:text="Agendamento"
            android:textAlignment="center"
            android:textColor="@color/cinzaClaro"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/txt_age_emp_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Empresa: "
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/txt_age_ser_preco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ServiÃ§o: "
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/txt_age_ser_nome_pet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pet: "
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/txt_age_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Data: "
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/txt_age_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hora: "
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/txt_age_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Status: "
            android:textAlignment="textStart" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Btn-Cancelar"
                android:layout_width="190dp"
                android:layout_height="38dp"
                android:text="CANCELAR"
                card_view:backgroundTint="#C90B0B" />

            <Button
                android:id="@+id/Btn_Editar"
                android:layout_width="190dp"
                android:layout_height="38dp"
                android:text="Editar"
                card_view:backgroundTint="@color/design_default_color_primary_dark" />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>