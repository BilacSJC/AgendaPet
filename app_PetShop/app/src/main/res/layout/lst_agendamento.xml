<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="1dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <TextView
                android:id="@+id/txtQualificadorUsuarioLista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Agendamento"
                android:textSize="18sp"
                android:background="@color/colorPrimary"
                android:textColor="@color/cinzaClaro"/>


                <TextView
                    android:id="@+id/txtNomeLista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nome:"
                    android:textAlignment="textStart" />

                <TextView
                    android:id="@+id/txtDocumentoLista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="RG::"
                    android:textAlignment="textStart" />

                <TextView
                    android:id="@+id/txtQuadraLoteLista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quadra/Lote:"
                    android:textAlignment="textStart" />

                <TextView
                    android:id="@+id/txtEnderecoLista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="EndereÃ§o:"
                    android:textAlignment="textStart" />


            </LinearLayout>
</android.support.v7.widget.CardView>