<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="1dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lst_pet_txt_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/mediumBlue"
            android:text="@string/pet"
            android:textAlignment="center"
            android:textColor="@color/cinzaClaro"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lst_pet_txt_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_toEndOf="@id/lbl_pet_nome"
                android:layout_toRightOf="@id/lbl_pet_nome"
                android:text=""
                android:textAlignment="textStart"
                android:layout_marginStart="2dp"/>
            <TextView
                android:id="@+id/lbl_pet_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nome: "
                android:textColor="#363636"
                android:fontFamily="Times New Roman"
                android:textAlignment="textStart"
                android:layout_marginStart="2dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lst_pet_txt_raca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_toEndOf="@id/lbl_pet_raca"
                android:layout_toRightOf="@id/lbl_pet_raca"
                android:text=""
                android:textAlignment="textStart"
                android:layout_marginStart="2dp"/>
            <TextView
                android:id="@+id/lbl_pet_raca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RaÃ§a: "
                android:textColor="#363636"
                android:fontFamily="Times New Roman"
                android:textAlignment="textStart"
                android:layout_marginStart="2dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lst_pet_txt_idade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_toEndOf="@id/lbl_pet_idade"
                android:layout_toRightOf="@id/lbl_pet_idade"
                android:text=""
                android:textAlignment="textStart"
                android:layout_marginStart="2dp"/>
            <TextView
                android:id="@+id/lbl_pet_idade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Idade: "
                android:textColor="#363636"
                android:fontFamily="Times New Roman"
                android:textAlignment="textStart"
                android:layout_marginStart="2dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lst_pet_txt_sexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_toEndOf="@id/lbl_pet_sexo"
                android:layout_toRightOf="@id/lbl_pet_sexo"
                android:text=""
                android:textAlignment="textStart"
                android:layout_marginStart="2dp"/>
            <TextView
                android:id="@+id/lbl_pet_sexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sexo: "
                android:textColor="#363636"
                android:fontFamily="Times New Roman"
                android:textAlignment="textStart"
                android:layout_marginStart="2dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lst_pet_txt_porte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_toEndOf="@id/lbl_pet_porte"
                android:layout_toRightOf="@id/lbl_pet_porte"
                android:text=""
                android:textAlignment="textStart"
                android:layout_marginStart="2dp"/>
            <TextView
                android:id="@+id/lbl_pet_porte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Porte: "
                android:textColor="#363636"
                android:fontFamily="Times New Roman"
                android:textAlignment="textStart"
                android:layout_marginStart="2dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/lst_pet_btn_excluir"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="@string/excluir"
                card_view:backgroundTint="#C90B0B"
                android:onClick="bntCancelar"/>


            <Button
                android:id="@+id/lst_pet_btn_editar"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="@string/editar"
                card_view:backgroundTint="#6a5acd"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>