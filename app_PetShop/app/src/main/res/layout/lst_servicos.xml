<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:paddingTop="10dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lst_ser_txt_titulo_servico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/mediumBlue"
            android:text="Serviço"
            android:textAlignment="center"
            android:textColor="@color/cinzaClaro"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lst_ser_txt_nome_servico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@id/lbl_lst_ser_nome_servico"
                android:layout_toRightOf="@id/lbl_lst_ser_nome_servico"
                android:layout_weight="1"
                android:text=""
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/lbl_lst_ser_nome_servico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:fontFamily="Times New Roman"
                android:text="Serviço: "
                android:textAlignment="textStart"
                android:textColor="#363636" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lst_ser_txt_preco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@id/lbl_lst_ser_preco"
                android:layout_toRightOf="@id/lbl_lst_ser_preco"
                android:layout_weight="1"
                android:text=""
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/lbl_lst_ser_preco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:fontFamily="Times New Roman"
                android:text="Preço: "
                android:textAlignment="textStart"
                android:textColor="#363636" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/lst_ser_btn_excluir"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="@string/excluir"
                card_view:backgroundTint="#C90B0B" />


            <Button
                android:id="@+id/lst_ser_btn_editar"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="@string/editar"
                card_view:backgroundTint="#6a5acd" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>