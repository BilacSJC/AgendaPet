<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="1dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtQualificadorUsuarioLista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="Solicitações"
            android:textSize="18sp"
            android:background="@color/colorPrimary"
            android:textColor="@color/cinzaClaro"/>


        <TextView
            android:id="@+id/txtNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nome:"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/txt_data_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Data:"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/txtx_hora_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hora:"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Status:"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/txt_nome_pet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome Pet:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_remarcar"
                android:layout_width="190dp"
                android:layout_height="38dp"
                android:text="REMARCAR"
                card_view:backgroundTint="#F0C908" />

            <Button
                android:id="@+id/btn_Confirmar"
                android:layout_width="190dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="Confirmar"
                card_view:backgroundTint="#40B444" />

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>